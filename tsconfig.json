{
	"compilerOptions": {
		// Basic Options
		"outDir": "build",
		"target": "ESNext",
		"removeComments": true,
		// Modules
		"module": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		// Error reporting
		"strict": true,
		"allowJs": true,
		"checkJs": true,
		"noImplicitAny": true,
		"noFallthroughCasesInSwitch": false,
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true,
		"declaration": true,
		// Paths aliases
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.js"
	]
}